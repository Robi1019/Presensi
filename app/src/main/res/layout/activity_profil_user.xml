                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="0812******"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="normal" />
            </LinearLayout>

